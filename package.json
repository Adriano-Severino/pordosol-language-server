{
    "name": "pordosol-language-server",
    "displayName": "ðŸŒ… Por Do Sol - Complete Language Support",
    "description": "Suporte completo para linguagem Por Do Sol: syntax highlighting, LSP, autocompletar e validaÃ§Ã£o",
    "version": "2.0.0",
    "publisher": "adriano-severino",
    "repository": {
        "type": "git",
        "url": "https://github.com/Adriano-Severino/pordosol-language-server.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Snippets"
    ],
    "keywords": [
        "portuguÃªs",
        "brazilian",
        "oop",
        "ownership",
        "interpolation"
    ],
    "activationEvents": [
        "onLanguage:pordosol"
    ],
    "main": "./client/out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "pordosol",
                "aliases": [
                    "Por Do Sol",
                    "pordosol",
                    "PorDoSol"
                ],
                "extensions": [
                    ".pr",
                    ".pds"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "pordosol",
                "scopeName": "source.pordosol",
                "path": "./syntaxes/pordosol.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Por Do Sol Language Server",
            "properties": {
                "pordosolLanguageServer.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "MÃ¡ximo nÃºmero de problemas reportados"
                },
                "pordosolLanguageServer.enableStrictMode": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Habilitar modo estrito de validaÃ§Ã£o"
                },
                "pordosolLanguageServer.enableOwnershipAnalysis": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Habilitar anÃ¡lise de ownership"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm run clean && npm run build",
        "build": "tsc -b --force",
        "watch": "tsc -b -w",
        "clean": "npx rimraf client/out server/out out",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^22.15.30",
        "rimraf": "^6.0.1",
        "typescript": "^5.8.3",
        "@vscode/vsce": "^2.15.0"
    }
}

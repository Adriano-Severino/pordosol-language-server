{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./out",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "moduleResolution": "node",
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["out/**", "node_modules/**"]
}